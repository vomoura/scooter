// tsconfig.app.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,                   
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,             
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true                 
  },
  "include": [
    "src",
    "src/styles/styled.d.ts"
  ],
  "exclude": [
    "node_modules",
    "types"
  ]
}
