// tsconfig.app.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    // <-- adicionamos isso:
    "typeRoots": ["node_modules/@types", "src/styles"]
  },

  // <-- garantimos que o TS processe tudo em src:
  "include": ["src"]
}
